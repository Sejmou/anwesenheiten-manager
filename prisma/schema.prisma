generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Account {
  id                 String  @id @default(cuid())
  userId             String  @map("user_id")
  type               String
  provider           String
  providerAccountId  String  @map("provider_account_id")
  refresh_token      String?
  access_token       String?
  expires_at         Int?
  token_type         String?
  scope              String?
  id_token           String?
  session_state      String?
  oauth_token_secret String?
  oauth_token        String?
  user               User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique @map("session_token")
  userId       String   @map("user_id")
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model User {
  id            String       @id @default(cuid())
  firstName     String
  lastName      String
  email         String?      @unique
  passwordHash  String?
  emailVerified DateTime?
  createdAt     DateTime     @default(now()) @db.Timestamptz(6)
  image         String?
  accounts      Account[]
  InviteToken   InviteToken?
  sessions      Session[]
}

model VerificationToken {
  id         Int      @id @default(autoincrement())
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model InviteToken {
  id        Int       @id @default(autoincrement())
  token     String    @unique
  used      Boolean   @default(false)
  createdAt DateTime  @default(now()) @db.Timestamptz(6)
  expires   DateTime? @db.Timestamptz(6)
  usedAt    DateTime? @db.Timestamptz(6)
  userId    String?   @unique @map("user_id")
  usedBy    User?     @relation(fields: [userId], references: [id])
}

model Singer {
  id          String            @id @default(cuid())
  firstName   String
  lastName    String
  email       String?           @unique
  createdAt   DateTime          @default(now()) @db.Timestamptz(6)
  voiceGroup  VoiceGroup
  attendances EventAttendance[]
}

model Event {
  id          String            @id
  summary     String
  description String?
  location    String?
  lastSyncAt  DateTime          @db.Timestamptz(6)
  start       DateTime          @db.Timestamptz(6)
  end         DateTime          @db.Timestamptz(6)
  attendances EventAttendance[]
}

model EventAttendance {
  singerId  String
  eventId   String
  event     Event    @relation(fields: [eventId], references: [id])
  singer    Singer   @relation(fields: [singerId], references: [id])
  createdAt DateTime @default(now()) @db.Timestamptz(6)

  @@id([singerId, eventId])
}

model Song {
  id             String            @id @default(cuid())
  createdAt      DateTime          @default(now()) @db.Timestamptz(6)
  name           String            @unique
  key            MusicalKey?
  description    String?
  files          SongFile[]
  setlistEntries SetlistSongInfo[]
}

model Setlist {
  id          String            @id @default(cuid())
  createdAt   DateTime          @default(now()) @db.Timestamptz(6)
  name        String
  description String?
  entries     SetlistSongInfo[]
}

model SetlistSongInfo {
  setlistId String
  songId    String
  order     Int
  createdAt DateTime @default(now()) @db.Timestamptz(6)
  notes     String?
  song      Song     @relation(fields: [songId], references: [id], onDelete: Cascade, onUpdate: NoAction)
  setlist   Setlist  @relation(fields: [setlistId], references: [id], onDelete: Cascade, onUpdate: NoAction)

  @@id([setlistId, songId])
  @@unique([setlistId, songId, order], name: "setlistEntryOrderUnique")
}

model SongFile {
  songId    String
  createdAt DateTime @default(now()) @db.Timestamptz(6)
  type      LinkType
  name      String
  url       String
  song      Song     @relation(fields: [songId], references: [id], onDelete: Cascade, onUpdate: NoAction)

  @@id([songId, name], name: "songFileId")
}

enum VoiceGroup {
  S1
  S2
  S2_M
  A1_M
  A1
  A2
  T1
  T2
  B1
  B2
  D
}

enum LinkType {
  audio
  video
  pdf
  musescore
  other
}

enum MusicalKey {
  C
  C_ @map("C#")
  Db
  D
  D_ @map("D#")
  Eb
  E
  F
  F_ @map("F#")
  Gb
  G
  G_ @map("G#")
  Ab
  A
  A_ @map("A#")
  Bb
  B
}
